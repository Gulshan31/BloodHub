<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="408dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:background="@drawable/gradient_background"
            android:orientation="vertical">

         <ImageView
             android:layout_width="142dp"
             android:layout_marginTop="36dp"
             android:layout_gravity="center_horizontal"
             android:layout_height="142dp"
             android:src="@drawable/gullu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="@font/lato_bold"
                android:layout_gravity="center_horizontal"
                android:text="Gulshan Kumar "
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="384dp"
            android:background="#fff"
            android:layout_marginTop="276dp"
            android:layout_centerHorizontal="true"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="o positive"
                        android:textSize="20sp"
                        android:paddingTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/start_blue"
                        android:fontFamily="@font/lato_bold"

                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donated"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 times"
                        android:textSize="20sp"
                        android:paddingTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/start_blue"
                        android:fontFamily="@font/lato_bold"

                        />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_for_contact_24dp"
                android:paddingLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Virajkumar508@gmail.com"
                android:fontFamily="@font/lato_bold"

                android:paddingLeft="20dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_android_black_24dp"
                android:paddingLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="+91 9876864549"
                android:fontFamily="@font/lato_bold"

                android:paddingLeft="20dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_location_black_24dp"
                android:paddingLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="JALANDHAR, PUNJAB"
                android:fontFamily="@font/lato_bold"
                android:paddingLeft="20dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_local_activity_black_24dp"
                android:paddingLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Regular Donor "
                android:fontFamily="@font/lato_bold"
                android:paddingLeft="20dp"/>



        </LinearLayout>

    </LinearLayout>


